<?import javafx.scene.layout.StackPane?>
<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="586.0" prefWidth="839.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.mediaController">

   <!-- MediaView in the center of the BorderPane -->
   <center>
       <StackPane fx:id="centerPane">
           <MediaView fx:id="mediaView" fitHeight="400.0" fitWidth="600.0" />
       </StackPane>

   </center>

   <!-- Bottom controls with VBox and resizable elements -->
   <bottom>
      <VBox fx:id="vbox" prefHeight="64.0" prefWidth="764.0">
         <children>
            <HBox fx:id="hbox1" alignment="CENTER" prefHeight="20.0" prefWidth="838.0">
               <children>
                  <Slider fx:id="slider" blockIncrement="0.0" majorTickUnit="100.0" prefHeight="20.0" prefWidth="643.0" />
                  <Label fx:id="timeStamp" alignment="BASELINE_RIGHT" opacity="0.72" prefHeight="18.0" prefWidth="63.0" text="00:00:00" />
               </children>
            </HBox>
            <HBox fx:id="hbox2" alignment="CENTER" prefHeight="39.0" prefWidth="826.0" spacing="10.0">
               <children>
