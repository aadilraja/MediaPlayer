                     <font>
                        <Font size="13.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Button>
                  <Slider fx:id="VolumeSlider" prefHeight="14.0" prefWidth="172.0" />
                  <ChoiceBox fx:id="SpeedChoice" prefHeight="26.0" prefWidth="55.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
   <top>
      <MenuBar fx:id="menuBar" prefHeight="34.0" prefWidth="838.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#chooseFile" text="Add File" />
                  <MenuItem mnemonicParsing="false" text="Add Playlist" />
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>

</BorderPane>
